<p id="notice"><%= notice %></p>

<%= form_for(@artist, url: choose_new_or_edit_artist) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= @artist.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @artist.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :アーティスト名 %><br>
  <%= f.text_field :name, class: 'form-control'  %>
  <br>
  <%= f.label :ジャンル %><br>
  <%= f.select :genre, Artist.genres.keys.to_a, {}, class: 'form-control'  %>
  <br>
  <%= f.label :アーティスト紹介 %><br>
  <%= f.text_area :self_introduction, class: 'form-control' %>
  <br>
  <%= f.label :アイコン画像 %><br>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
  <br>
  <%= f.label :プロモーション音声 %><br>
  <%= f.file_field :singing %>
  <%= f.hidden_field :singing_cache %>
  <br>
  <%= f.label :プロモーション動画 %><br>
  <%= f.file_field :play_video %>
  <%= f.hidden_field :play_video_cache %>
  <br>
  <%= f.submit '登録', class: 'btn btn-primary btn-block' %>

<% end %>
