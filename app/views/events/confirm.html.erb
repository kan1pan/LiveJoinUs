<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h3>以下の内容で、登録する。</h3>

        <%= form_for(@event) do |f| %>
          <%= f.hidden_field :title %>
          <%= f.hidden_field :date %>
          <%= f.hidden_field :content %>
          <%= f.hidden_field :genre %>
          <%= f.hidden_field :image %>
          <%= f.hidden_field :image_cache %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :latitude %>
          <%= f.hidden_field :longitude %>

          <p><%= photo_img(@event) %></p>
          <p>イベントタイトル：<%= @event.title %></p>
          <p>イベント開催日：<%= @event.date %></p>
          <p>イベント内容：<%= simple_format(@event.content) %></p>
          <p>こんなアーティストにオススメ：<%= @event.genre %></p>
          <%= f.submit "登録",class: 'btn btn-primary btn-block'  %><br>
        <% end %>

        <%= form_for(@event, url: new_event_path, method:'get') do |f| %>
          <%= f.hidden_field :title %>
          <%= f.hidden_field :date %>
          <%= f.hidden_field :content %>
          <%= f.hidden_field :genre %>
          <%= f.hidden_field :image %>
          <%= f.hidden_field :image_cache %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :latitude %>
          <%= f.hidden_field :longitude %>
          <div class="confirm_area_btn">
            <%= f.submit "もどる", name:'back', class: 'btn btn-default btn-block' %>
          </div>
        <% end %>
        <br>
    </div>
</div>
