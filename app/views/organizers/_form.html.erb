<p id="notice"><%= notice %></p>

<%= form_for(@organizer, url: choose_new_or_edit_organizer) do |f| %>
  <% if @organizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @organizer.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @organizer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :団体名 %><br>
  <%= f.text_field :name, class: 'form-control'  %>
  <br>
  <%= f.label :代表者氏名 %><br>
  <%= f.text_field :daihyo_name, class: 'form-control'  %>
  <br>
  <%= f.label :電話番号 %><br>
  <%= f.text_field :tel_number, class: 'form-control' %>
  <br>
  <%= f.label :団体紹介 %><br>
  <%= f.text_area :content, class: 'form-control' %>
  <br>
  <%= f.label :SNSアドレス %><br>
  <%= f.text_field :sns_address, class: 'form-control' %>
  <br>
  <%= f.submit '登録', class: 'btn btn-primary btn-block' %>

<% end %>
