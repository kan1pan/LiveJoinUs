<% provide(:title, "確認画面") %>

<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h3>以下の内容で、登録する。</h3>

        <%= form_for(@organizer) do |f| %>

            <%= f.hidden_field :name %>
            <%= f.hidden_field :daihyo_name %>
            <%= f.hidden_field :tel_number %>
            <%= f.hidden_field :content %>
            <%= f.hidden_field :sns_address %>

            <p>団体名：<%= @organizer.name %></p>
            <p>代表者氏名：<%= @organizer.daihyo_name %></p>
            <p>電話番号：<%= @organizer.tel_number %></p>
            <%= f.submit "登録",class: 'btn btn-primary btn-block'  %><br>
        <% end %>

        <%= form_for(@organizer, url: new_organizer_path, method:'get') do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :daihyo_name %>
        <%= f.hidden_field :tel_number %>
          <div class="confirm_area_btn">
            <%= f.submit "もどる", name:'back', class: 'btn btn-default btn-block' %>
          </div>
        <% end %>
        <br>
    </div>
</div>
