<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <div class="confirm_area">
        <h3>以下のイベントに参加する。</h3>

        <%= form_for(@event, url:{controller: 'participants', action: 'create', id:@event.id}) do |f| %>

            <%= f.hidden_field :title %>
            <%= f.hidden_field :date %>
            <%= f.hidden_field :content %>

            <p><%= photo_img(@event) %></p>
            <p>イベントタイトル：<%= @event.title %></p>
            <p>イベント開催日：<%= @event.date %></p>
            <p>イベント内容：<%= simple_format(@event.content)
             %></p>
            <%= f.submit "参加",class: 'btn btn-primary btn-block'  %><br>
        <% end %>

        <%= form_for(@event, url: event_path(@event.id), method:'get') do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :date %>
        <%= f.hidden_field :content %>
            <%= f.submit "もどる", name:'back', class: 'btn btn-default btn-block' %>
        <% end %>
        <br>
      </div>
    </div>
</div>
