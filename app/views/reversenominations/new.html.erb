<% provide(:title, "逆指名送信入力フォーム") %>

<div class="container">
  <div class="wrapper">
    <h2>逆指名送信入力フォーム</h2>
      <div class="reversenomination_area col-md-12">
          <%= search_form_for(@q, url:search_reversenominations_path(id:'event', artist_id:params[:artist_id]), remote:true, method:'post')  do |f| %>
            <%= f.label :イベントタイトル %>
            <%= f.search_field :title_cont, class: 'form-control' %>
            <%= f.label :開催日 %>
            <%= f.date_select :date_gteq, include_blank: true, class: 'form-control' %>〜
            <%= f.date_select :date_lteq, include_blank: true, class: 'form-control' %><br>
            <%= f.label :フリーワード %>
            <%= f.search_field :content_cont, class: 'form-control' %><br>
            <div class="search_btn">
              <%= f.submit '検索', class: 'btn btn-primary' %>
            </div>
          <% end %>
        <div id="search_result_reversenomination">
        </div>
      </div>
  </div>
</div>
